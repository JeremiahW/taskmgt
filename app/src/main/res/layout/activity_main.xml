<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity" >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/logo"
                android:adjustViewBounds="true" />

             <android.support.design.widget.TextInputLayout
                android:id="@+id/txt_Layout_PersonName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                 android:layout_below="@+id/imageView"   >
                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Name"
                    android:ems="10"
                    android:id="@+id/txtUser"
                    android:hint="@string/login_label_user" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txt_Layout_textPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_Layout_PersonName" >
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:text="Name"
                android:ems="10"
                android:id="@+id/txtPwd"
                android:hint="@string/login_label_password"  />
            </android.support.design.widget.TextInputLayout>

                <Button android:text="@string/login_btnLogin"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:id="@+id/btnLogin"
                    android:layout_below="@+id/txt_Layout_textPassword" />

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
