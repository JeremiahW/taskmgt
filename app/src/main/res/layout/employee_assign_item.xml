<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" android:shrinkColumns="0" android:stretchColumns="1">
        <TableRow>
            <TextView android:id="@+id/TxtEmpAssignItemId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99"/>
            <TextView android:id="@+id/TxtEmpAssignItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="这是一个测试的"/>
            <RadioButton android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/RbEmpAssignItem"
                android:text="Select"
                android:focusable="false"
                android:clickable="false"/>
        </TableRow>
    </TableLayout>
</LinearLayout>