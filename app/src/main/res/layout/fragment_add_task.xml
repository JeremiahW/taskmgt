<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" tools:context="com.bakery.taskmgt.AddTaskFragment">


  <TableLayout
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:stretchColumns="1,2"
      android:shrinkColumns="0"  >
      <TableRow>
          <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="请求日期与时间" android:layout_span="3"/>
      </TableRow>
      <TableRow>
          <EditText android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:id="@+id/TxtAddTaskRequestDate"  android:layout_span="2" />
          <Button android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:id="@+id/BtnAddRequestDate"
              android:text="设置日期"/>
      </TableRow>
      <TableRow>
          <EditText android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:id="@+id/TxtAddTaskRequestTime" android:layout_span="2" />
          <Button android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:id="@+id/BtnAddRequestTime"
              android:text="设置时间"/>
      </TableRow>
      <TableRow>
          <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="选择客户" android:layout_span="3"/>
      </TableRow>
      <TableRow>
          <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="选择负责人" android:layout_span="3"/>

      </TableRow>
      <TableRow>
          <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="工作内容" android:layout_span="3"/>
      </TableRow>
      <TableRow>
          <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="费用"/>
          <EditText android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="99.99"/>
          <RadioGroup android:orientation="horizontal">
              <RadioButton
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:text="含税" />
              <RadioButton
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:text="不含税" android:checked="true" />
          </RadioGroup>
      </TableRow>
  </TableLayout>

</FrameLayout>
