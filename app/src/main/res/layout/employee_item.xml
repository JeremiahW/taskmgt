<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:shrinkColumns="1"
        android:stretchColumns="0" >
        <TableRow>
            <LinearLayout android:layout_height="fill_parent"
                android:layout_width="fill_parent" android:orientation="vertical">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/ItemEmpId"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/ItemEmpName"
                android:text="Item Employee Name"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ItemEmpPhone"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Item Employee Phone"/>
            </LinearLayout>
            <ImageButton android:id="@+id/ItemBtnDetail" android:src="@drawable/task" />

        </TableRow>


    </TableLayout>
</LinearLayout>