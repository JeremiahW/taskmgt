<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.bakery.taskmgt.UploadFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
         <Button
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/BtnUploadCamera"
             android:text="@string/upload_btn_camera" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/BtnUploadAlbum"
                android:text="@string/upload_btn_album" />
    </LinearLayout>
    <Button android:id="@+id/BtnUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上传数据"></Button>
</LinearLayout>
